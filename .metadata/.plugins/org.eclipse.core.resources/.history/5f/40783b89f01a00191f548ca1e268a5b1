<?php

if (isset($_POST['submit']))
{
	dateFormat();
	internationalDate();
}

function internationalDate(){
	
	
	$date = $_POST["submit"];
	$date = strtotime($date);
	echo "The date you entered is: " date("d/m/Y", $date) . "<br>";
	
}


function dateFormat(){
	
	$date = $_POST["submit"];
	$date = strtotime($date);
	echo date("m/d/Y", $date) . "<br>";
	
}

?>

<form action="phpFunctions.php" method="post">
Date: <input type="text" name="submit"><br>
<input type="submit" >
</form>



